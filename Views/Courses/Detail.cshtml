@model CourseViewModel


<!-- Breadcrumbs -->
<div class="breadcrumbs text-sm mb-5">
  <ul>
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Courses" asp-action="List">Education</a>
    <li><a asp-controller="Courses" asp-action="Detail" asp-route-id="@Model.Course.Id"
        asp-route-url="@Model.Course.Url">@Model.Course?.Title</a></li>
  </ul>
</div>


<div class="flex flex-row gap-[3%]">

  <!-- Course Detail -->
  <div class="w-3/4">

    <!-- Course Description -->
    <div class="rounded-box shadow-xl bg-primary">
      <div class="px-10 py-10">
        <div class="flex gap-6">
          <img src="~/img/course/@Model.Course.Image" alt="@Model.Course.Title" class="rounded-xl w-1/3 h-1/3" />

          <div class="w-full h-vh grid content-between">

            <!-- Header  -->
            <div class="w-full">
              <div class="flex justify-between items-center">
                <p class="text-2xl font-bold mb-3">@Model.Course.Title</p>
                <div class="badge px-4 py-3 @(Model.Course.LevelId == 1 ? "bg-[#00b894] text-white" 
                                              : Model.Course.LevelId == 2 ? "bg-[#f39c12] text-black" 
                                              : Model.Course.LevelId == 3 ? "bg-[#e74c3c] text-white" 
                                              : "bg-gray-500 text-white")">
                  @Model.Course.Level?.Name
                </div>
              </div>
              <p class="text-lg">@Model.Course.Description</p>
            </div>

            <!-- Rating -->
            <div class="w-full">
              <span class="text-sm">
                4,6
              </span>
              <div class="rating rating-xs rating-half">
                <input type="radio" name="rating-10" class="rating-hidden" />
                <input type="radio" name="rating-10" class="mask mask-star-2 mask-half-1 bg-green-500" />
                <input type="radio" name="rating-10" class="mask mask-star-2 mask-half-2 bg-green-500" />
                <input type="radio" name="rating-10" class="mask mask-star-2 mask-half-1 bg-green-500"
                  checked="checked" />
                <input type="radio" name="rating-10" class="mask mask-star-2 mask-half-2 bg-green-500" />
                <input type="radio" name="rating-10" class="mask mask-star-2 mask-half-1 bg-green-500" />
                <input type="radio" name="rating-10" class="mask mask-star-2 mask-half-2 bg-green-500" />
                <input type="radio" name="rating-10" class="mask mask-star-2 mask-half-1 bg-green-500" />
                <input type="radio" name="rating-10" class="mask mask-star-2 mask-half-2 bg-green-500" />
                <input type="radio" name="rating-10" class="mask mask-star-2 mask-half-1 bg-green-500" />
                <input type="radio" name="rating-10" class="mask mask-star-2 mask-half-2 bg-green-500" />
              </div>
              <p class="text-sm my-1"><i class="fa-solid fa-graduation-cap fa-sm"></i> 1200 students completed</p>

              <p class="text-sm"><i class="fa-regular fa-clock fa-xs pe-1"></i>@Model.Course.Hours Hours</p>
            </div>

            <!-- Instructor -->
            <div class="w-full">
              <p><span class="font-bold">Instructor: </span> @Model.Course.User?.FullName</p>
            </div>

          </div>
        </div>
      </div>

    </div>

    <!-- Course Content -->
    <div class="rounded-box shadow-xl bg-primary my-5">
      <div class="px-10 py-10">
        <div role="tablist" class="tabs tabs-bordered">

          <input type="radio" name="my_tabs_1" role="tab" class="tab font-bold text-lg" aria-label="Corse Content"
            checked="checked" />
          <!-- Corse Content, Accordion -->
          <div role="tabpanel" class="tab-content pt-5">
            <div class="collapse collapse-arrow">
              <input type="checkbox" name="my-accordion-2" />
              <div class="collapse-title font-medium">First education</div>
              <!-- First education -->
              <div class="collapse-content">
                <div class="course-section">
                  <ul>
                    <ul>
                      <li>
                        <p>
                        <div class="flex justify-between items-center">
                          <div class="mb-3">
                            <i class="fa-solid fa-video fa-sm me-3"></i>
                            <span>Introduction to Programming</span>
                          </div>
                          <div>
                            <span>(10 minutes)</span>
                          </div>
                        </div>
                        </p>
                      </li>
                      <li>
                        <p>
                        <div class="flex justify-between items-center">
                          <div class="mb-3">
                            <i class="fa-solid fa-video fa-sm me-3"></i>
                            <span>Basic Syntax</span>
                          </div>
                          <div>
                            <span>(15 minutes)</span>
                          </div>
                        </div>
                        </p>
                      </li>
                      <li>
                        <p>
                        <div class="flex justify-between items-center">
                          <div>
                            <i class="fa-solid fa-video fa-sm me-3"></i>
                            <span>Variables and Data Types</span>
                          </div>
                          <div>
                            <span>(5 minutes)</span>
                          </div>
                        </div>
                        </p>
                      </li>
                    </ul>
                  </ul>
                </div>
              </div>
            </div>

            <div class="collapse collapse-arrow">
              <input type="checkbox" name="my-accordion-2" />
              <div class="collapse-title font-medium">Second education</div>
              <!-- Second education -->
              <div class="collapse-content">
                <ul>
                  <li>
                    <p>
                    <div class="flex justify-between items-center">
                      <div class="mb-3">
                        <i class="fa-solid fa-video fa-sm me-3"></i>
                        <span>Advanced Programming Concepts</span>
                      </div>
                      <div>
                        <span>(20 minutes)</span>
                      </div>
                    </div>
                    </p>
                  </li>
                  <li>
                    <p>
                    <div class="flex justify-between items-center">
                      <div class="mb-3">
                        <i class="fa-solid fa-video fa-sm me-3"></i>
                        <span>Object-Oriented Programming</span>
                      </div>
                      <div>
                        <span>(30 minutes)</span>
                      </div>
                    </div>
                    </p>
                  </li>
                  <li>
                    <p>
                    <div class="flex justify-between items-center">
                      <div class="mb-3">
                        <i class="fa-solid fa-video fa-sm me-3"></i>
                        <span>Error Handling</span>
                      </div>
                      <div>
                        <span>(10 minutes)</span>
                      </div>
                    </div>
                    </p>
                  </li>
                  <li>
                    <p>
                    <div class="flex justify-between items-center">
                      <div class="mb-3">
                        <i class="fa-solid fa-video fa-sm me-3"></i>
                        <span>Performance Optimization</span>
                      </div>
                      <div>
                        <span>(15 minutes)</span>
                      </div>
                    </div>
                    </p>
                  </li>
                </ul>
              </div>
            </div>

            <div class="collapse collapse-arrow">
              <input type="checkbox" name="my-accordion-2" />
              <div class="collapse-title font-medium">Third education</div>
              <!-- Third education -->
              <div class="collapse-content">
                <ul>
                  <li>
                    <p>
                    <div class="flex justify-between items-center">
                      <div class="mb-3">
                        <i class="fa-solid fa-video fa-sm me-3"></i>
                        <span>Web Development Basics</span>
                      </div>
                      <div>
                        <span>(15 minutes)</span>
                      </div>
                    </div>
                    </p>
                  </li>
                  <li>
                    <p>
                    <div class="flex justify-between items-center">
                      <div class="mb-3">
                        <i class="fa-solid fa-video fa-sm me-3"></i>
                        <span>HTML and CSS</span>
                      </div>
                      <div>
                        <span>(25 minutes)</span>
                      </div>
                    </div>
                    </p>
                  </li>
                  <li>
                    <p>
                    <div class="flex justify-between items-center">
                      <div class="mb-3">
                        <i class="fa-solid fa-video fa-sm me-3"></i>
                        <span>JavaScript Basics</span>
                      </div>
                      <div>
                        <span>(10 minutes)</span>
                      </div>
                    </div>
                    </p>
                  </li>
                  <li>
                    <p>
                    <div class="flex justify-between items-center">
                      <div>
                        <i class="fa-solid fa-video fa-sm me-3"></i>
                        <span>Building Your First Website</span>
                      </div>
                      <div>
                        <span>(1 hour)</span>
                      </div>
                    </div>
                    </p>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <input type="radio" name="my_tabs_1" role="tab" class="tab font-bold text-lg" aria-label="Sources" />
          <!-- Guestions -->
          <div role="tabpanel" class="tab-content pt-5">
            <div class="collapse-title font-medium">Github:
              <a class="link font-normal">https://github.com/onuraydinoglu/AcademyApp</a>
            </div>
          </div>

          <input type="radio" name="my_tabs_1" role="tab" class="tab font-bold text-lg" aria-label="Comments" />
          <!-- Comments -->
          <div role="tabpanel" class="tab-content pt-5">
            <div class="collapse-title font-medium">
              <span> User Comments </span>

              <div class="flex items-center mt-5">
                <div class="me-7 rounded-full border border-accent-content p-5">
                  <i class="fa-regular fa-user fa-2xl"></i>
                </div>
                <div>
                  <p>John Doe</p>
                  <p class="font-normal">This course is very informative and helpful!</p>
                </div>
              </div>

              <div class="flex items-center mt-5">
                <div class="me-7 rounded-full border border-accent-content p-5">
                  <i class="fa-regular fa-user fa-2xl"></i>
                </div>
                <div>
                  <p>Jane Smith</p>
                  <p class="font-normal">I really enjoyed the content and the way it is presented.</p>
                </div>
              </div>

              <div class="flex items-center mt-5">
                <div class="me-7 rounded-full border border-accent-content p-5">
                  <i class="fa-regular fa-user fa-2xl"></i>
                </div>
                <div>
                  <p>Mike Brown</p>
                  <p class="font-normal">Some parts were difficult to follow, but overall it was great.</p>
                </div>
              </div>

              <div class="flex items-center mt-5">
                <div class="me-7 rounded-full border border-accent-content p-5">
                  <i class="fa-regular fa-user fa-2xl"></i>
                </div>
                <div>
                  <p>Sarah Connor</p>
                  <p class="font-normal">The examples made it easy to understand the concepts.</p>
                </div>
              </div>

              <div class="flex items-center mt-5">
                <div class="me-7 rounded-full border border-accent-content p-5">
                  <i class="fa-regular fa-user fa-2xl"></i>
                </div>
                <div>
                  <p>Chris Evans</p>
                  <p class="font-normal">Great course! Looking forward to the next one.</p>
                </div>
              </div>
            </div>
          </div>


        </div>
      </div>
    </div>

  </div>

  <!-- Course Location -->
  <div class="w-1/4">

    <div class="rounded-box shadow-xl bg-primary sticky top-8">
      <div class="px-10 py-10">
        <img src="~/img/icon/icon.png" alt="">
        <div class="flex flex-col text-center">

          <div class="my-3">
            <p class="font-bold text-lg">Location</p>
            <p>Istanbul</p>
          </div>

          <div class="flex justify-center gap-4 mb-3">
            <div>
              <p class="font-bold text-lg">Start Date</p>
              <p>01/02/2025</p>
            </div>
            <div>
              <p class="font-bold text-lg">End Date</p>
              <p>28/02/2025</p>
            </div>
          </div>

          <div class="mb-3">
            <p class="font-bold text-lg">Application Deadline</p>
            <p>31/01/2025</p>
          </div>

          <form asp-controller="Enrollments" asp-action="UserCreate" method="post">
            <input type="hidden" name="CourseId" value="@Model.Course.Id" />
            @if (User.Identity!.IsAuthenticated)
            {
              @if (ViewBag.IsEnrolled != null && (bool)ViewBag.IsEnrolled)
              {
                <a asp-controller="Courses" asp-action="Detail" asp-route-id="@Model.Course.Id"
                  asp-route-url="@Model.Course.Url" class="btn bg-[#BFA4C5] hover:bg-[#BFA4] shadow-md mt-3">Go to
                  Course</a>
              }
              else
              {
                <button type="submit" class="btn bg-[#BFA4C5] hover:bg-[#BFA4] shadow-md mt-3">Apply Now</button>
              }
            }
            else
            {
              <a asp-controller="Users" asp-action="Login" class="btn bg-[#BFA4C5] hover:bg-[#BFA4] shadow-md mt-3">Login
                to Apply</a>
            }
          </form>
        </div>
      </div>
    </div>

  </div>

</div>
