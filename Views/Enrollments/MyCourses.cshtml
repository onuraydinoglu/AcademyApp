@model IEnumerable<Enrollment>


<!-- Courses Header  -->
<div class="bg-primary shadow-md rounded-box py-10 px-10 my-5">
    <div class="flex justify-between items-center">
        <div class="">
            <h2 class="text-2xl font-bold text-dark"> My Courses</h2>
        </div>
        <div class="flex">
            <label class="input input-bordered w-96 flex items-center me-5">
                <input type="text" class="grow" placeholder="Search" />
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                    class="h-4 w-4 opacity-70">
                    <path fill-rule="evenodd"
                        d="M9.965 11.026a5 5 0 1 1 1.06-1.06l2.755 2.754a.75.75 0 1 1-1.06 1.06l-2.755-2.754ZM10.5 7a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Z"
                        clip-rule="evenodd" />
                </svg>
            </label>
            <select class="select select-bordered w-40">
                <option>Newest</option>
                <option>Popularity</option>
                <option>Most Commented</option>
                <option>Views</option>
                <option>Most Liked</option>
                <option>Name (A-Z)</option>
            </select>
        </div>

    </div>
</div>

<!-- Courses List  -->
<div class="container">
    <div class="grid grid-cols-4 gap-6">
        @foreach (var item in Model)
        {
            <a href="/courses/detail/@item.Course.Id/@item.Course.Url">
                <div class="card bg-base-100 shadow-xl">
                    <figure class="px-10 pt-10">
                        <img src="~/img/course/@item.Course?.Image" alt="@item.Course?.Title" class="rounded-xl w-56" />
                    </figure>
                    <div class="card-body items-center text-center pt-5 pb-1">
                        <h2 class="card-title">@item.Course?.Title</h2>
                        <span class="@(item.IsCompleted ? "text-[#28a745]" : "text-[#dc3545]")">
                            @(item.IsCompleted ? "Tamamlandı" : "Devam Ediyor")
                        </span>
                    </div>
                    <div class="divider my-2 p-0"></div>
                    <div class="flex justify-around items-center mb-3">
                        <progress class="progress bg-base-100 progress-primary w-56" value="40" max="100"></progress>
                    </div>
                </div>
            </a>
        }
    </div>

    <div class="flex justify-center my-10">
        <div class="join">
            <button class="join-item btn">«</button>
            <button class="join-item btn">1</button>
            <button class="join-item btn btn-active">2</button>
            <button class="join-item btn">3</button>
            <button class="join-item btn">4</button>
            <button class="join-item btn">»</button>
        </div>
    </div>

</div>